<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.demo.imagesearch.ui.dashboard.model.ImageResult" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_very_small">

        <androidx.appcompat.widget.AppCompatImageView
            loadImage="@{model.link}"
            android:layout_width="@dimen/image_grid_size"
            android:layout_height="@dimen/image_grid_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/size_small"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>